@model List<SCMPT.Resultado_examen>

@using (Html.BeginForm("Resultados", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Resultado_examen</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Examen", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <input type="file" name="FileUpload1"/>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Tipo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="tipo" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@if (Model != null)
  {
    foreach (var result in Model)
{
    <div class="card">
            <img width="280" height="250" src="@Url.Action("exmanenimagen","Usuario",new {id = result.idResultado})">
        <span>tipo: @result.tipo</span>
            <span>fecha: @result.Fecha</span>
            
    </div>
}
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
